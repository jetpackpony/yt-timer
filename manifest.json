{
  "name": "YT Timer",
  "version": "1.0",
  "description": "Time YT",
  "manifest_version": 2,
  "background": {
    "page": "src/html/background.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.twitch.tv/*",
        "*://*.netflix.com/*"
      ],
      "js": [
        "src/js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/js/*"
  ]
}